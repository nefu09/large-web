<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <servlet>
        <servlet-name>submitServlet</servlet-name>
        <servlet-class>servlet01.SubmitServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>submitServlet</servlet-name>
        <url-pattern>/submit</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tologin</servlet-name>
        <servlet-class>servlet01.ToLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tologin</servlet-name>
        <url-pattern>/tologin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>delete</servlet-name>
        <servlet-class>servlet01.DeleteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>delete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>contextUse</servlet-name>
        <servlet-class>servlet01.AlterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>contextUse</servlet-name>
        <url-pattern>/context/use</url-pattern>
    </servlet-mapping>

    <context-param>
        <param-name>url</param-name>
        <param-value>www.baidu.com</param-value>
    </context-param>

    <servlet>
        <servlet-name>modify</servlet-name>
        <servlet-class>servlet01.ModifyServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>modify</servlet-name>
        <url-pattern>/modify</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>add</servlet-name>
        <servlet-class>servlet01.AddServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>add</servlet-name>
        <url-pattern>/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>alter</servlet-name>
        <servlet-class>servlet01.AlterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>alter</servlet-name>
        <url-pattern>/alter</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>index</servlet-name>
        <servlet-class>servlet01.IndexServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>index</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>news</servlet-name>
        <servlet-class>servlet01.newsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>news</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>inform</servlet-name>
        <servlet-class>servlet01.informServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>inform</servlet-name>
        <url-pattern>/inform</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>servlet01.MyListener</listener-class>
    </listener>
</web-app>